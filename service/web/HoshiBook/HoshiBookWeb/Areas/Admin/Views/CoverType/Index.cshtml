@model List<CoverType>
@{
    @* ViewData["Title"] = "Index"; *@
}

@* <partial name="../Shared/_Notification" /> *@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-9 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType
            </a>
            <button id="bulkCreateBtn" class="btn btn-success" onclick="handleBulkCreateClick()">
                <i class="bi bi-filetype-xlsx"></i> &nbsp; Bulk Create CoverTypes
            </button>
            <a id="exportDetailsBtn" asp-controller="CoverType" asp-action="ExportDetails" class="btn btn-info">
                <i class="bi bi-file-earmark-arrow-down"></i> &nbsp; Export Details
            </a>
        </div>
    </div>
    <form id="coverTypeListImportForm" method="post" asp-action="BulkCreate" enctype="multipart/form-data">
        <div class="text-top">
            <input id="fileUpload" type="file" name="uploadFile" width="250">
            <button id="sendFileBtn" type="button" class="btn btn-primary" onclick="handleSendFileClick()">
                <i class="bi bi-send"></i> &nbsp; Send
            </button>
            <button id="revertFileBtn" type="button" class="btn btn-danger" onclick="handleRevertFileClick()">
                <i class="bi bi-backspace-reverse"></i> &nbsp; Revert
            </button>
        </div>
    </form>
    <br/><br/>
    <table id="tblData" class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>CoverType Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/coverType/coverType.js">
    </script>
}