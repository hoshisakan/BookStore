@model List<UserDetailsVM>
@{
    @* ViewData["Title"] = "Index"; *@
}

@* <partial name="../Shared/_Notification" /> *@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New User
            </a>
        </div>
    </div>
    <br/><br/>
    <table id="tblData" class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                @* <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th> *@
                <th>RoleName</th>
                <th>Company</th>
                <th>IsLockedOut</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/user.js"></script>
}